{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
    "exclude": [
        "**/__tests__/**",
        "**/__mocks__/**",
        "**/*.test.ts",
        "**/*.test.tsx",
        "node_modules",
        "dist"
    ]
}
